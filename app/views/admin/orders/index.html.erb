<h2>注文履歴一覧</h2>
<table>
  <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
  </tr>
  <% @orders.each do |order| %>
  <tr>
    <td><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
    <td><%= order.customer.order_customer_name %></td>
    <td><%= order.order_details.sum(:amount) %></td>
  </tr>
  <% end %>
</table>

