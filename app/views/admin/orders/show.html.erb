<h4>注文履歴詳細</h4>
<table>
  <tr>
    <td>購入者</td>
    <td><%= @customer.customer_full_name %></td>
  </tr>
  <tr>
    <td>注文日</td>
    <td><%= @order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
  </tr>
  <tr>
    <td>配送先</td>
    <td>
      〒<%= @customer.postal_code %>
      <%= @customer.address %></br>
      <%= @customer.customer_full_name %>
    </td>
  </tr>
  <tr>
    <td>支払方法</td>
    <td><%= @order.payment_method_i18n %></td>
  </tr>
</table>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.item_name %></td>
      <td><%= order_detail.tax_include_price %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.subtotal %></td>
    </tr>
  </tbody>
  <% end %>
</table>

<h4>商品合計</h4>
<%= @order.get_total_price %>
<h4>送料</h4>
<%= Order::SHIPPING %>
<h4>請求金額合計</h4>
<%= @order.get_billing_amount %>
