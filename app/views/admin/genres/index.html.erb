<h2>ジャンル追加・一覧</h2>

<%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
  <div class="form-group">
    <label for="genre_name">ジャンル名</label>
    <%= f.text_field :name, class: 'form-control genre_name' %>
  </div>
  <%= f.submit '新規登録' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <% @genres.each do |genre| %>
  <tr>
    <td>
      <%= genre.name %>
    </td>
    <td>
      <%= link_to "編集", edit_admin_genre_path(genre) %>
    </td>
  </tr>
  <% end %>  
</table>